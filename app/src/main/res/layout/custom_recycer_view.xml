<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/foodImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/food"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10" />

    <TextView
        android:id="@+id/prodName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/foodImage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        tools:text="Kasuku Book 200pgs" />

    <TextView
        android:id="@+id/dateTv"
        tools:text="Expiry Date"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/foodImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:layout_below="@+id/prodName" />

    <TextView
        android:id="@+id/daysTv"
        android:layout_toRightOf="@+id/prodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prodName"
        android:layout_alignBottom="@+id/prodName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/copia_green"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        tools:text="366 Days left to Expire" />

</RelativeLayout>